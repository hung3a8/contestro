; Core services remote address
; These addresses are not used for client connections.
; They are only used for local connections between multiple services, including
; connecting to the LogService.
[core_services]
ContestServer = [['localhost', 29000]]
AdminServer = [['localhost', 29001]]
LogService = [['localhost', 29002]]

; ContestServer configuration
[contest_configuration]
contest_listen_address = 'localhost'
contest_listen_port = 8888
max_submission_file_size = 512000 ; 500KB
submission_limit = 1

[admin_configuration]
admin_listen_address = ''
admin_listen_port = 8889

[log_configuration]
max_log_length = 5120
clear_old_logs = False
log_level_debug = True